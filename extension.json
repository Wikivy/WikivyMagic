{
	"name": "WikivyMagic",
	"author": [
		"xaoseric"
	],
	"url": "https://github.com/Wikivy/WikivyMagic",
	"descriptionmsg": "wikivymagic-description",
	"namemsg": "wikivymagic-extensionname",
	"license-name": "MIT",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.44.0",
		"platform": {
			"php": ">= 8.1"
		}
	},
	"MessagesDirs": {
		"WikivyMagic": [
			"i18n/overrides",
			"i18n/wikivy"
		]
	},
	"ExtensionMessagesFiles": {
		"WikivyMagicAliases": "WikivyMagicAliases.php"
	},
	"AutoloadNamespaces": {
		"Wikivy\\WikivyMagic\\": "includes/",
		"Wikivy\\WikivyMagic\\Maintenance\\": "maintenance/"
	},
	"LogActionsHandlers": {
		"vanishuser/*": "MediaWiki\\Logging\\LogFormatter"
	},
	"LogHeaders": {
		"vanishuser": "vanishuser-log-header"
	},
	"LogNames": {
		"vanishuser": "vanishuser-log-name"
	},
	"LogTypes": [
		"vanishuser"
	],
	"SpecialPages": {
		"VanishUser": {
			"class": "Wikivy\\WikivyMagic\\Specials\\SpecialVanishUser",
			"services" : [
				"JobQueueGroupFactory",
				"UserFactory"
			],
			"optional_services": [
				"CentralAuth.CentralAuthAntiSpoofManager",
				"CentralAuth.CentralAuthDatabaseManager",
				"CentralAuth.GlobalRenameUserValidator"
			]
		}
	},
	"Hooks": {
		"AbuseFilterShouldFilterAction": {
			"handler": "AbuseFilter"
		},
		"APIQuerySiteInfoGeneralInfo": {
			"handler": "Main"
		},
		"BlockIpComplete": {
			"handler": "Main"
		},
		"GetLocalURL::Internal": {
			"handler": "Main"
		},
		"GlobalUserPageWikis": {
			"handler": "GlobalUserPage"
		},
		"MessageCacheFetchOverrides": {
			"handler": "Main"
		},
		"MimeMagicInit": {
			"handler": "Main"
		},
		"RecentChange_save": {
			"handler": "Main"
		},
		"SiteNoticeAfter": {
			"handler": "Main"
		},
		"SkinAddFooterLinks": {
			"handler": "Main"
		},
		"TitleReadWhitelist": {
			"handler": "Main"
		},
		"UserGetRightsRemove": {
			"handler": "Main"
		}
	},
	"HookHandlers": {
		"AbuseFilter": {
			"class": "Wikivy\\WikivyMagic\\HookHandlers\\AbuseFilter",
			"services": [
				"AbuseFilterVariablesManager"
			]
		},
		"GlobalUserPage": {
			"class": "Wikivy\\WikivyMagic\\HookHandlers\\GlobalUserPage",
			"services": [
				"CreateWikiDataStore",
				"ManageWikiDataStoreFactory"
			]
		},
		"Main": {
			"class": "Wikivy\\WikivyMagic\\HookHandlers\\Main",
			"factory": "Wikivy\\WikivyMagic\\HookHandlers\\Main::factory",
			"services": [
				"MainConfig",
				"HttpRequestFactory"
			]
		}
	},
	"config": {
		"WikivyMagicAccessIdsMap": {
			"description": "Array, in the format of wiki => [ central ids ]. Users authorized to access certain wikis to prevent global read rights from applying.",
			"value": []
		},
		"WikivyMagicMemcachedServers": {
			"description": "Array. Memcached servers to use for clearing memcached keys when a wiki is deleted or renamed.",
			"value": []
		},
		"WikivyMagicSwiftKey": {
			"description": "String. Swift key to use for Swift shell commands.",
			"value": ""
		},
		"WikivyReportsBlockAlertKeywords": {
			"description": "Array. Words in block reasons which trigger a report being sent to TSPortal.",
			"value": []
		},
		"WikivyReportsWriteKey": {
			"description": "String. TSPortal write key to be used when connecting to it.",
			"value": ""
		}
	},
	"manifest_version": 2
}
